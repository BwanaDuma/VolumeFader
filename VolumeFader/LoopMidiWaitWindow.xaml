<Window x:Class="VolumeFader.LoopMidiWaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Waiting for loopMIDI" Height="150" Width="400" Background="Firebrick" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="MessageText" Foreground="White" Text="The application requires loopMIDI to be running. Waiting for loopMIDI to start..." TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
            <Button x:Name="CancelButton" Width="80" Margin="0,0,10,0" Click="CancelButton_Click">Cancel</Button>
            <Button x:Name="OkButton" Width="80" Click="OkButton_Click">OK</Button>
        </StackPanel>
    </Grid>
</Window>