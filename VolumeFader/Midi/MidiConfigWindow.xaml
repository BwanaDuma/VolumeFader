<Window x:Class="VolumeFader.Midi.MidiConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MIDI Mappings" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Label Content="MIDI Device:" VerticalAlignment="Center"/>
            <ComboBox x:Name="DeviceCombo" Width="300" Margin="10,0,0,0"/>
            <Button x:Name="StartListenButton" Content="Start" Margin="10,0,0,0" Click="StartListenButton_Click" />
            <Button x:Name="StopListenButton" Content="Stop" Margin="10,0,0,0" Click="StopListenButton_Click" IsEnabled="False" />
        </StackPanel>

        <DataGrid x:Name="MappingsGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Channel" Binding="{Binding Channel}" Width="80" />
                <DataGridTextColumn Header="Command" Binding="{Binding Command}" Width="80" />
                <DataGridTextColumn Header="Data1" Binding="{Binding Data1}" Width="80" />
                <DataGridTextColumn Header="Data2" Binding="{Binding Data2}" Width="80" />
                <DataGridTextColumn Header="Raw" Binding="{Binding Raw}" Width="120" />
                <DataGridTextColumn Header="Keys" Binding="{Binding Keys}" Width="150" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Close" Width="80" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>